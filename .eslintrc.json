{
  "extends": [
    "airbnb-base",
    "plugin:jest/all",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "jest",
    "@typescript-eslint"
  ],
  "root": true,
  "globals": {},
  "overrides": [],
  "rules": {
    "jest/no-hooks": [
      "error",
      {
        "allow": ["afterEach", "afterAll", "beforeEach", "beforeAll"]
      }
    ],
    "import/no-unresolved": [
      2,
      {
        "commonjs": true,
        "amd": true
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "./ops/**",
          "**/*.test.ts",
          "**/*.test.tsx",
          "./testing/**/*.js",
          "./testing/**/*.ts",
          "jest.config.js"
          ]
      }
    ],
    "import/prefer-default-export": "off",
    "max-len": [
      "error",
      {
        "code": 100,
        "ignoreUrls": true
      }
    ]
  },
  "parser": "@typescript-eslint/parser",
  "env": {},
  "overrides": [],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@functions",
            "./src/functions"
          ],
          [
            "@libs",
            "./src/libs"
          ],
          [
            "@apis",
            "./src/apis"
          ],
          [
            "@service",
            "./"
          ]
        ],
        "extensions": [
          ".ts",
          ".js"
        ]
      }
    }
  }
}